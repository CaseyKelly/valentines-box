<table class="table">

  <colgroup>
    <col class="col-xs-2">
    <col class="col-xs-7">
  </colgroup>

  <thead>
    <tr>
      <th>Name</th>
      <th>Valentine</th>
    </tr>
  </thead>

  <tbody>
    <% @valentines.each do |valentine| %>
    <tr>
      <td><%= valentine.name %></td>
      <td><%= valentine.message %></td>
      <td><%= link_to 'Delete', valentine_path(valentine), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>
