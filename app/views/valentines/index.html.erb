<table class="table">

  <colgroup>
    <col class="col-xs-2">
    <col class="col-xs-7">
  </colgroup>

  <thead>
    <tr>
      <th><h3>Name</h3></th>
      <th><h3>Valentine</h3></th>
    </tr>
  </thead>

  <tbody>
    <% @valentines.each do |valentine| %>
    <tr>
      <td><h4><%= valentine.name %></h4></td>
      <td><h4><%= valentine.message %></h4></td>
      <td><%= link_to 'Delete', valentine_path(valentine), method: :delete,class: 'btn btn-default btn-sm', data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'Back', root_path, class: 'btn btn-default' %>

