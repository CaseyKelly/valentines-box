<div class="jumbotron">
  <h1>Hey, it's Valentine's Day</h1>
  <br><p><span class="glyphicon glyphicon-heart-empty"></span></p><br>
  <p>You should send Casey a valentine and let him know how you really feel.</p>
  <p></p>
</div>


<%= form_for(@valentine, html: {:class => "form-horizontal"}) do |f| %>

<div class="form-group">
  <div class="field">
    <%= f.label :name, :class => 'control-label col-xs-3' %>
    <div class='form-controls col-md-3'>
      <%= f.text_field :name,:class => 'form-control' %>
    </div>
  </div>
</div>
<br>
<div class="form-group">
  <div class="field">
    <%= f.label :message, :class => 'control-label col-xs-3' %>
    <div class='form-controls col-md-6'>
      <%= f.text_area :message,:class => 'form-control input-lg' %>
    </div>
  </div>
</div>
<br>
<div class="form-group">
    <div class='form-controls'>
      <%= f.submit 'Send Casey a Valentine', class: "btn btn-info btn-lg" %>
      <%= link_to 'See the Valentines', valentines_path, class: 'btn btn-default btn-lg' %>
    </div>
  </div>

